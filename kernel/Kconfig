#
# kernel basics
#
# {{{
config KERNEL_SMP
	bool "Build an SMP system"
	default n

menu "Hidden"
	visible if 0

	config KERNEL_NO_VIRT_MEM
		bool "Kernel virtual memory support"
		default n

	config KERNEL_VIRT_MEM
		bool "Kernel virtual memory support"
		default n	if KERNEL_NO_VIRT_MEM
		default y
endmenu
# }}}

#
# kernel memory layout
#
menu "Memory configuration"
	source "kernel/memory/Kconfig"
endmenu

#
# system calls
#
# {{{
menu "System calls"
	config SC_DEBUG
		bool "Global system call debug"
		depends on KERNEL_SYSCALL && KERNEL_MSG_DEBUG
		default n

	config SC_FILESYSTEM
		bool "File system"
		select KERNEL_SYSCALL
		select SC_DYNMEM
		select LIB_MUTEX
		default y
		help
			File system syscalls such as open, close, read, write.

	config SC_FILESYSTEM_DEBUG
		bool "File system debug messages"
		depends on SC_FILESYSTEM && KERNEL_MSG_DEBUG
		default n

	config SC_DYNMEM
		bool "Dynamic memory"
		select KERNEL_SYSCALL
		select LIB_MUTEX
		default y
		help
			This includes malloc and free.

	config SC_DYNMEM_DEBUG
		bool "Dynamic memory debug messages"
		depends on SC_DYNMEM && KERNEL_MSG_DEBUG
		select PRINTF_SIZET
		default n

	config SC_SCHED
		bool "Scheduler, process and thread control"
		select KERNEL_SYSCALL
		default y
		help
			Syscalls for process and thread creation and control as well as scheduler calls.

	config SC_SCHED_DEBUG
		bool "Scheduler, process and thread control debug messages"
		depends on SC_SCHED && KERNEL_MSG_DEBUG
		default n

	config SC_SIGNAL
		bool "User-space signal support"
		select KERNEL_SYSCALL
		select KERNEL_IPI if KERNEL_SMP
		default n
		help
			User space signaling mechanism.

	config SC_SIGNAL_DEBUG
		bool "Signal debug messages"
		depends on SC_SIGNAL
		default n

	config SC_TIME
		bool "Time"
		select KERNEL_SYSCALL
		select KERNEL_TIMER
		select KERNEL_SIGNAL
		default y
		help
			Timer syscalls, such as sleep and time.

	menu "Hidden"
		visible if 0

		config KERNEL_SYSCALL
			bool "Kernel syscall"

		config KERNEL_IPI
			bool "Inter-processor interrupts"
	endmenu
endmenu
# }}}

#
# init binary
#
# {{{
menu "Init binary settings"
	config INIT_BINARY
		hex "Address of the init binary"

	choice
		prompt "Init binary type"

		config INIT_BINTYPE_RAW
			bool "INIT_BINARY points to the init entry address"
			select BINLOADER_RAW

		config INIT_BINARY_ELF
			bool "INIT_BINARY points to an ELF file"
			select BINLOADER_ELF
	endchoice

	config INIT_ARGS
		qstring "Init argument string"
		default ""

	menu "Binary loader support"
		config BINLOADER_RAW
			bool "Raw binaries"

		config BINLOADER_ELF
			bool "ELF binaries"
	endmenu

	menu "Hidden"
		visible if 0

		config INIT_BINTYPE
			int "Init binary type"
			default 0	if INIT_BINTYPE_RAW
			default 1	if INIT_BINARY_ELF
	endmenu
endmenu
# }}}

#
# scheduler
#
# {{{
menu "Scheduler settigns"
	source "kernel/sched/Kconfig"
endmenu
# }}}

#
# timer
#
# {{{
menu "Timer settings"
	depends on KERNEL_TIMER

	config KTIMER_CYCLETIME_US
		int "Kernel timer cycle time [us]"
		default 500000

	config KTIMER_ERR_MAX
		int "Maximal kernel timer error [%]"
		default 5
endmenu

menu "Hidden"
	visible if 0
	
	config KERNEL_TIMER
		bool "Timer"
endmenu
# }}}

#
# file system
#
# {{{
menu "File system"
	source "kernel/fs/Kconfig"
endmenu
# }}}

#
# miscellaneous features
#
# {{{
config KERNEL_SIGNAL
	bool "Kernel signal support"
	default y
# }}}

#
# kernel uart
#
# {{{
menuconfig KERNEL_UART
	bool "Uart settings"
	select DRIVER_UART

if KERNEL_UART
	# baud rate
	choice
		prompt "Uart baud rate"

		config KERNEL_UART_BR_2400
			bool "Uart baud rate 2400"

		config KERNEL_UART_BR_4800
			bool "Uart baud rate 4800"

		config KERNEL_UART_BR_9600
			bool "Uart baud rate 9600"

		config KERNEL_UART_BR_14400
			bool "Uart baud rate 14400"

		config KERNEL_UART_BR_19200
			bool "Uart baud rate 19200"

		config KERNEL_UART_BR_28800
			bool "Uart baud rate 28800"

		config KERNEL_UART_BR_38400
			bool "Uart baud rate 38400"

		config KERNEL_UART_BR_57600
			bool "Uart baud rate 57600"

		config KERNEL_UART_BR_76800
			bool "Uart baud rate 76800"

		config KERNEL_UART_BR_115200
			bool "Uart baud rate 115200"

		config KERNEL_UART_BR_230400
			bool "Uart baud rate 230400"

		config KERNEL_UART_BR_250000
			bool "Uart baud rate 250000"

			config KERNEL_UART_BR_500000
			bool "Uart baud rate 500000"

		config KERNEL_UART_BR_1000000
			bool "Uart baud rate 1000000"
	endchoice

	# parity
	choice
		prompt "Parity"
		default KERNEL_UART_PARITY_NONE

		config KERNEL_UART_PARITY_ODD
			bool "Odd"

		config KERNEL_UART_PARITY_EVEN
			bool "Even"

		config KERNEL_UART_PARITY_NONE
			bool "None"
	endchoice

	# stop bits
	choice
		prompt "Stop bits"
		default KERNEL_UART_STOPB_1

		config KERNEL_UART_STOPB_1
			bool "1"

		config KERNEL_UART_STOPB_2
			bool "2"
	endchoice
endif # KERNEL_UART

menu "Hidden"
	visible if 0

	config KERNEL_UART_BAUDRATE
		int "Uart baud rate"
		default 2400	if KERNEL_UART_BR_2400
		default 4800	if KERNEL_UART_BR_4800
		default 9600	if KERNEL_UART_BR_9600
		default 14400	if KERNEL_UART_BR_14400
		default 19200	if KERNEL_UART_BR_19200
		default 28800	if KERNEL_UART_BR_28800
		default 38400	if KERNEL_UART_BR_38400
		default 57600	if KERNEL_UART_BR_57600
		default 76800	if KERNEL_UART_BR_76800
		default 115200	if KERNEL_UART_BR_115200
		default 230400	if KERNEL_UART_BR_230400
		default 250000	if KERNEL_UART_BR_250000
		default 500000	if KERNEL_UART_BR_500000
		default 1000000	if KERNEL_UART_BR_1000000
		default 1000000

	config KERNEL_UART_PARITY
		int "Stop bits"
		default 0	if KERNEL_UART_PARITY_NONE
		default 1	if KERNEL_UART_PARITY_ODD
		default 2	if KERNEL_UART_PARITY_EVEN
		default 0

	config KERNEL_UART_STOPBITS
		int "Stop bits"
		default 1	if KERNEL_UART_STOPB_1
		default 2	if KERNEL_UART_STOPB_2
		default 1
endmenu

# }}}

#
# test and debug
#
# {{{
menuconfig KERNEL_DEBUG
	bool "Test and debug"
	select KERNEL_UART

if KERNEL_DEBUG
	menu "Debug messages"
		config KERNEL_MSG_INIT
			bool "Print kernel init messages"
			select KERNEL_PRINTF
			select KERNEL_MSG_INFO
			select KERNEL_MSG_WARN

		config KERNEL_MSG_FATAL
			bool "Print kernel FATAL messages"
			select KERNEL_PRINTF

		config KERNEL_MSG_WARN
			bool "Print kernel WARNING messages"
			select KERNEL_PRINTF

		config KERNEL_MSG_INFO
			bool "Print kernel INFO messages"
			select KERNEL_PRINTF

		config KERNEL_MSG_DEBUG
			bool "Print kernel DEBUG messages"
			select KERNEL_PRINTF
			help
				Specific debug messages, e.g. for syscalls, need to be enabled individually

		menu "Hidden"
			visible if 0

			config KERNEL_PRINTF
				bool "Kernel printf"

			config KERNEL_NO_MSG_INIT
				bool "Inverse of KERNEL_MSG_INIT"
				default y if !KERNEL_MSG_INIT
				default n if KERNEL_MSG_INIT
		endmenu
	endmenu

	config KERNEL_TEST
		bool "Execute 'kernel_test()' on boot"

	config KERNEL_STAT
		bool "Execute 'kernel_stat()' on boot"
		select KERNEL_PRINTF
endif
# }}}
