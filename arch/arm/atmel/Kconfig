#
# clock configuration
#
menu "Clock configuration"
	if ATMEL_PMC
		source arch/arm/atmel/Kconfig.pmc
	endif
endmenu

#
# flash configuration
#
menu "Flash configuration"
	if ATMEL_EEFC
		source arch/arm/atmel/Kconfig.eefc
	endif
endmenu

#
# options to be selected by specific boards
#
menu "Hidden"
	visible if 0

	config ATMEL_PMC
		bool "Atmel power management controller"
		default 0

	config ATMEL_EEFC
		bool "Atmel enhanced embedded flash controller"
		default 0

	config ATMEL_PIO
		bool "Atmel peripheral parallel I/O controller"
		default 0
endmenu
