#
# processor type
#
# {{{
choice
	prompt "Processor type"

	config AVR
		bool "AVR"
		select NOFLOAT
		select KERNEL_NO_VIRT_MEM

	config ARM
		bool "ARM"
		select KERNEL_NO_VIRT_MEM
endchoice

# processor specifics
if AVR
	source "arch/avr/Kconfig"
endif # AVR

if ARM
	source "arch/arm/Kconfig"
endif # ARM

# generic options
menu "Hidden"
	visible if 0

	config ARCH
		string "Architecture"
		default "avr"		if AVR
		default "arm"		if ARM
	
	config PROCESSOR
		string "Processor"
		default AVR_MCU		if AVR
		default ARM_BOARD	if ARM

	config ADDR_WIDTH_8
		bool "8-bit"

	config ADDR_WIDTH_16
		bool "16-bit"

	config ADDR_WIDTH_32
		bool "32-bit"

	config ADDR_WIDTH
		int "Address width"
		default 8 if ADDR_WIDTH_8
		default 16 if ADDR_WIDTH_16
		default 32 if ADDR_WIDTH_32
		default 32

	config REGISTER_WIDTH_8
		bool "8-bit"

	config REGISTER_WIDTH_16
		bool "16-bit"

	config REGISTER_WIDTH_32
		bool "32-bit"

	config REGISTER_WIDTH
		int "Address width"
		default 8 if REGISTER_WIDTH_8
		default 16 if REGISTER_WIDTH_16
		default 32 if REGISTER_WIDTH_32
		default 32

	config NOFLOAT
		bool "Enable floating point support"
		default n
endmenu
# }}}

#
# generic configs
#
# {{{
config NCORES
	int "Number of cores"
	default 1

config CORE_MASK
	hex "Core mask"
	range 0x1 0x0fffffff
	default 0x1
# }}}
