/* macros */
// terminal config (term_cfg_t)
#define term_cfg_t(iflags, oflags, lflags, tabs) \
	int<8> = [ \
		iflags, \
		oflags, \
		lflags, \
		tabs, \
	]; \
	\
	int<16> = [ \
		0,	/* lines (set by the driver) */ \
		0,	/* columns (set by the driver) */ \
	];
