#include <config/config.h>
#include <avr.dts>
#include <gpio.dts>


porta = {
	compatible = "avr,gpio";

	avr_gpio_dtd(
		0x20,			// porta
		0x68,			// PCICR
		0x6b,			// PCMSK0
		0xf0			// pull-up mask
	)

	gpio0 = {
		compatible = "gpio";

		gpio_cfg_t(
			0xff,		// in mask
			0x00,		// out mask
			0xf1,		// int mask
			0xf0,		// invert mask
			4			// interrupt (pcint0)
		);

		switches = {
			compatible = "gpio,port";

			gpio_port_cfg_t(
				0xf0,	// in mask
				0x00,	// out mask
				0xf0	// int mask
			)
		};

		adc = {
			compatible = "gpio,port";

			gpio_port_cfg_t(
				0x0f,	// in mask
				0x00,	// out mask
				0x00	// int mask
			)
		};

#if defined(CONFIG_DRIVER_MCP23017) && defined(CONFIG_GPIO_INTFWD)
		mcp-int = {
			compatible = "gpio,intfwd";

			gpio_intfwd_dtd(
				0,					// pin
				(arch.num-ints++)	// interrupt to trigger
			)
		};
#endif // CONFIG_DRIVER_MCP23017 && CONFIG_GPIO_INTFWD
	};
};

portb = {
	compatible = "avr,gpio";

	avr_gpio_dtd(
		0x23,		// portb
		0x68,		// PCICR
		0x6c,		// PCMSK1
		0x01		// pull-up mask
	)

	gpio1 = {
		compatible = "gpio";

		gpio_cfg_t(
			0x00,	// in mask
			0x03,	// out mask
			0x00,	// int mask
			0x03,	// invert mask
			0		// interrupt
		);

		uled = {
			compatible = "gpio,pin";

			gpio_pin_dtd(
				0,	// pin
				0x2	// mode (out)
			)
		};

#ifdef CONFIG_KERNEL_HEARTBEAT
# define HEARTBEAT_PIN	1
# include "../common/heartbeat.dts"
#endif // CONFIG_KERNEL_HEARTBEAT
	};
};

portc = {
	compatible = "avr,gpio";

	avr_gpio_dtd(
		0x26,		// portc
		0x68,		// PCICR
		0x6d,		// PCMSK2
		0xc0		// pull-up mask
	)

	gpio2 = {
		compatible = "gpio";

		gpio_cfg_t(
			0xc0,	// in mask
			0xc0,	// out mask
			0xc0,	// int mask
			0xc0,	// invert mask
			6		// interrupt (pcint2)
		);

		int0 = {
			compatible = "gpio,port";

			gpio_port_cfg_t(
				0xc0,	// in mask
				0xc0,	// out mask
				0xc0	// int mask
			)
		};
	};
};
