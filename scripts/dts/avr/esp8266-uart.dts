uart1 = {
	compatible = "avr,uart";

	/* uart hardware (dt_data_t) */
	baseaddr = 0xc8;		// uart1 config register base

	reg = [ 0x64 ];			// PRR0
	int<8> = [ 0x10 ];		// PRR0_PRUSART1

	int<8> = [
		28,					// uart1 rx interrupt
		30,					// uart1 tx interrupt (disabled)
	];

	eth0 = {
		compatible = "esp8266";

		/* uart config (uart_cfg_t) */
		int<32> = [ 2400 ];		// baudrate
		int<8> = [
			1,					// stop bits (1)
			0,					// parity (TPARITY_NONE)
			3,					// csize (TCS_8)
			0x0,				// iflags (none)
			0x0,				// oflags (none)
			0x0,				// lflags (none)
		];
	};
};
