uart0 = {
	compatible = "avr,uart";

	/**
	 * uart hardware description
	 * 	has to match dt_data_t of the avr uart driver
	 */
	baseaddr = 0xc0;			// uart0 config register base

	reg = [ 0x64 ];				// PRR0
	int<8> = [ 0x2 ];			// PRR0_PRUSART0

	int<8> = [
		20,						// uart0 rx interrupt
		22						// uart0 tx interrupt
	];

	tty0 = {
		compatible = "terminal";

		/**
		 * terminal configuration
		 * 	has to match the config data type of the underlying
		 * 	device driver, i.e. uart_cfg_t
		 */
		int<32> = [ 115200 ];	// baudrate
		int<8> = [
			1,					// stop bits (1)
			0,					// parity (TPARITY_NONE)
			3,					// csize (TCS_8)
			0x0,				// iflags (none)
			0x2,				// oflags (TOFL_NLCR)
			0x0					// lflags (none)
		];

		klog = {
			compatible = "kernel,log";
		};
	};
};
