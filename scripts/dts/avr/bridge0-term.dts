#include <bridge.dts>
#include <term.dts>


brdg0-right = {
	compatible = "bridge,itf";

	bridge_cfg_t(
		0,					// id
		2,					// chunksize
		(arch.num-ints++),	// rx interrupt
		(arch.num-ints++)	// tx interrupt
	)

	brdg0-itf = {
		compatible = "bridge,uart-dev";

		brdg0-term = {
			compatible = "terminal";

			term_cfg_t(
				0x0,		// iflags (none)
				0x0,		// oflags (none)
				0x0,		// lflags (none)
				0			// tabs
			)

			tty-bridge0 = {
				compatible = "terminal,raw";
			};
		};
	};
};
