#include <config/config.h>


gpio-normal = {
	compatible = "x86,gpio";

	/* gpio config (gpio_cfg_t) */
	int<CONFIG_GPIO_INT_WIDTH> = [
		1,		// mode (normal)
		0xff,	// pin mask
		0x3f,	// in mask
		0xfc,	// out mask
		0x00,	// int mask
		0xff,	// invert mask (pass through)
		0,		// interrupt number
	];
};

gpio-strict = {
	compatible = "x86,gpio";

	/* gpio config (gpio_cfg_t) */
	int<CONFIG_GPIO_INT_WIDTH> = [
		2,		// mode (strict)
		0xff,	// pin mask
		0x3f,	// in mask
		0xfc,	// out mask
		0x00,	// int mask
		0x00,	// invert mask (pass through)
		0,		// interrupt number
	];
};
