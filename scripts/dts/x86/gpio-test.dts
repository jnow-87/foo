#include <config/config.h>
#include <gpio.dts>


port1 = {
	compatible = "x86,gpio";

	/* gpio hardware (dt_data_t) */
	int<16> = [ 10 ];				// interrupt timer period [ms]

	gpio1 = {
		compatible = "gpio";

		gpio_cfg_t(
			0xffffffff,			// in mask
			0xffffffff,			// out mask
			0xffffffff,			// int mask
			0x00000005,			// invert mask
			(arch.num-ints++)	// interrupt
		);

		gpio1-port0 = {
			compatible = "gpio,port";

			/* port config (gpio_port_cfg_t) */
			int<CONFIG_GPIO_INT_WIDTH> = [
				0xff0f,			// in mask
				0xff00,			// out mask
				0x000f,			// int mask
			];
		};

		gpio1-pin0 = {
			compatible = "gpio,pin";

			/* pin config (dt_data_t) */
			int<8> = [
				4,		// pin
				0x3,	// mode (i/o)
			];
		};

		gpio1-int0 = {
			compatible = "gpio,port";

			/* port config (gpio_port_cfg_t) */
			int<CONFIG_GPIO_INT_WIDTH> = [
				0xffffffff,		// in mask
				0xffffffff,		// out mask
				0xffffffff,		// int mask
			];
		};
	};
};
