uart1 = {
	compatible = "x86,uart";

	/* uart hardware (dt_data_t) */
	string = "/dev/ttyUSB1";	// path
	int<8> = [
		0,						// rx interrupt
		0,						// tx interrupt
	];

	// cfg (uart_cfg_t)
	int<32> = [ 115200 ];		// baudrate
	int<8> = [
		0,						// stop bits (1)
		0,						// parity (UART_PARITY_NONE)
		3,						// csize (UART_CS_8)
	];

	brdg0-left = {
		compatible = "bridge,uart-itf";

		/* bridge config (bridge_cfg_t) */
		int<8> = [
			0,					// id
			2,					// chunksize
			0,					// automatically set by the driver
			0,					// automatically set by the driver
		];
	};
};
