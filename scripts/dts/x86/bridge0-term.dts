brdg0-right-uart = {
	compatible = "bridge,uart-dev";

	/**
	 * bridge hardware description
	 *	has to match bridge_cfg_t
	 */
	// bridge config
	int<8> = [
		0,					// id
		2,					// chunksize
		6,					// rx interrupt
		7					// tx interrupt
	];

	tty-bridge0 = {
		compatible = "terminal";

		/**
		 * terminal configuration
		 * 	has to match the config data type of the underlying
		 * 	device driver, i.e. uart_cfg_t
		 */
		int<32> = [ 115200 ];	// baudrate
		int<8> = [
			1,					// stop bits (1)
			0,					// parity (TPARITY_NONE)
			3,					// csize (TCS_8)
			0x0,				// iflags (none)
			0x0,				// oflags (none)
			0x0					// lflags (none)
		];
	};
};
