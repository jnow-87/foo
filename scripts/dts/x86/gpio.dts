#include <config/config.h>
#include <gpio.dts>
#include <x86.dts>


port0 = {
	compatible = "x86,gpio";

	x86_gpio_dtd(
		0			// interrupt timer period [ms]
	)

	gpio0 = {
		compatible = "gpio";

		gpio_cfg_t(
			0xff,	// in mask
			0xff,	// out mask
			0x00,	// int mask
			0x00,	// invert mask
			0		// interrupt
		);

		gpio0-port0 = {
			compatible = "gpio,port";

			gpio_port_cfg_t(
				0xff,	// in mask
				0xff,	// out mask
				0x00	// int mask
			)
		};
	};
};
