memory = {
	ram = {
		baseaddr = 0x00400000;
		size = 23072768;

		text = {
			baseaddr = 0x00400000;
			size = 20971520;
		};

		kernel_heap = {
			baseaddr = 0x01800000;
			size = 1048576;
		};

		kernel_stack = {
			baseaddr = 0x01900000;
			size = 4096;
		};

		app_heap = {
			baseaddr = 0x01901000;
			size = 1048576;
		};
	};
};

devices = {
	uart0 = {
		compatible = "x86,uart";

		tty0 = {
			compatible = "terminal";

			/**
			 * terminal configuration
			 * 	has to match the configuration data type of
			 * 	the underlying device driver
			 */
			int<32> = [ 115200 ];	// baudrate
			int<8> = [
				1,					// stop bits (1)
				0,					// parity (TPARITY_NONE)
				3,					// csize (TCS_8)
				0					// flags (none)
			];

			klog = {
				compatible = "kernel,log";
			};
		};
	};
};
