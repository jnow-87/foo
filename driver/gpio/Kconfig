menuconfig DRIVER_GPIO
	bool "gpio driver"
	select KERNEL_DEVFS
	select SC_SIGNAL

if DRIVER_GPIO
	config GPIO_INT_WIDTH
		int "gpio register width [bits]"
		default 8

	config DRIVER_MCP23017
		bool "mcp23017 i2c I/O expander"
		select DRIVER_I2C

	config GPIO_DEBUG
		bool "Enable debug messages"
		depends on KERNEL_MSG_DEBUG
		default n
endif # DRIVER_GPIO
