menuconfig DRIVER_VRAM
	bool "Video ram"

if DRIVER_VRAM
	config VRAM_RAW
		bool "devfs device driver"
		select KERNEL_DEVFS

	config VRAM_TERM
		bool "Terminal driver"
		select FONTS
endif # DRIVER_VRAM
